@model RequestFlow.Models.RequestDetailViewModel
@{
    ViewData["Title"] = "Request Details";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Request No</dt>
    <dd class="col-sm-10">@Model.RequestNo</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Request Type</dt>
    <dd class="col-sm-10">@Model.RequestType</dd>

    <dt class="col-sm-2">Priority</dt>
    <dd class="col-sm-10"><partial name="_PriorityBadge" model="Model.Priority" /></dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10"><partial name="_StatusBadge" model="Model.Status" /></dd>

    <dt class="col-sm-2">Created By</dt>
    <dd class="col-sm-10">@Model.CreatedBy</dd>

    <dt class="col-sm-2">Created Date</dt>
    <dd class="col-sm-10">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>

@if (Model.StatusHistory.Any())
{
    <h4 class="mt-4">Status History</h4>
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Comment</th>
                <th>Changed By</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in Model.StatusHistory)
            {
                <tr>
                    <td><partial name="_StatusBadge" model="h.FromStatus" /></td>
                    <td><partial name="_StatusBadge" model="h.ToStatus" /></td>
                    <td>@(h.Comment ?? "â€”")</td>
                    <td>@h.ChangedByDisplayName</td>
                    <td>@h.ChangedDate.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    @if (Model.CanEdit)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    }
    @if (Model.CanSubmitForApproval)
    {
        <form asp-action="SubmitForApproval" asp-route-id="@Model.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success">Submit for Approval</button>
        </form>
    }
    @if (Model.CanApprove)
    {
        <button type="button" class="btn btn-success btn-approve" data-request-id="@Model.Id" data-request-no="@Model.RequestNo" data-request-title="@Model.Title" data-return-to="Details">Approve</button>
        <button type="button" class="btn btn-danger btn-reject" data-request-id="@Model.Id" data-request-no="@Model.RequestNo" data-request-title="@Model.Title" data-return-to="Details">Reject</button>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@if (Model.CanApprove)
{
    <div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="approveModalLabel">Approve Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="approveForm" asp-action="Approve" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="RequestId" id="approveRequestId" />
                    <input type="hidden" name="RequestNo" id="approveRequestNo" />
                    <input type="hidden" name="Title" id="approveTitle" />
                    <input type="hidden" name="ReturnTo" id="approveReturnTo" value="Details" />
                    <div class="modal-body">
                        <p>Are you sure you want to approve request <strong id="approveDisplayNo"></strong> - <span id="approveDisplayTitle"></span>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Approve</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel">Reject Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="rejectForm" asp-action="Reject" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="RequestId" id="rejectRequestId" />
                    <input type="hidden" name="RequestNo" id="rejectRequestNo" />
                    <input type="hidden" name="Title" id="rejectTitle" />
                    <input type="hidden" name="ReturnTo" id="rejectReturnTo" value="Details" />
                    <div class="modal-body">
                        <p>Rejecting request <strong id="rejectDisplayNo"></strong> - <span id="rejectDisplayTitle"></span></p>
                        <div class="mb-3">
                            <label for="rejectReason" class="form-label">Rejection reason (required)</label>
                            <textarea name="RejectionReason" id="rejectReason" class="form-control" rows="3" required maxlength="500"></textarea>
                            @if (TempData["RejectError"] != null)
                            {
                                <span class="text-danger">@TempData["RejectError"]</span>
                            }
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (TempData["RejectError"] != null && TempData["RejectRequestId"] != null)
    {
        <input type="hidden" id="reopenRejectId" value="@TempData["RejectRequestId"]" />
        <input type="hidden" id="reopenRejectNo" value="@TempData["RejectRequestNo"]" />
        <input type="hidden" id="reopenRejectTitle" value="@TempData["RejectTitle"]" />
        <input type="hidden" id="reopenRejectReturnTo" value="@TempData["RejectReturnTo"]" />
    }

    @section Scripts {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var approveModalEl = document.getElementById('approveModal');
                var rejectModalEl = document.getElementById('rejectModal');
                document.querySelectorAll('.btn-approve').forEach(function (btn) {
                    btn.addEventListener('click', function () {
                        document.getElementById('approveRequestId').value = btn.getAttribute('data-request-id');
                        document.getElementById('approveRequestNo').value = btn.getAttribute('data-request-no');
                        document.getElementById('approveTitle').value = btn.getAttribute('data-request-title');
                        document.getElementById('approveReturnTo').value = btn.getAttribute('data-return-to') || 'Details';
                        document.getElementById('approveDisplayNo').textContent = btn.getAttribute('data-request-no');
                        document.getElementById('approveDisplayTitle').textContent = btn.getAttribute('data-request-title');
                        new bootstrap.Modal(approveModalEl).show();
                    });
                });
                document.querySelectorAll('.btn-reject').forEach(function (btn) {
                    btn.addEventListener('click', function () {
                        document.getElementById('rejectRequestId').value = btn.getAttribute('data-request-id');
                        document.getElementById('rejectRequestNo').value = btn.getAttribute('data-request-no');
                        document.getElementById('rejectTitle').value = btn.getAttribute('data-request-title');
                        document.getElementById('rejectReturnTo').value = btn.getAttribute('data-return-to') || 'Details';
                        document.getElementById('rejectDisplayNo').textContent = btn.getAttribute('data-request-no');
                        document.getElementById('rejectDisplayTitle').textContent = btn.getAttribute('data-request-title');
                        document.getElementById('rejectReason').value = '';
                        new bootstrap.Modal(rejectModalEl).show();
                    });
                });
                @if (TempData["RejectError"] != null && TempData["RejectRequestId"] != null)
                {
                    <text>
                (function () {
                    var reopenId = document.getElementById('reopenRejectId');
                    if (reopenId) {
                        document.getElementById('rejectRequestId').value = reopenId.value;
                        document.getElementById('rejectRequestNo').value = document.getElementById('reopenRejectNo').value;
                        document.getElementById('rejectTitle').value = document.getElementById('reopenRejectTitle').value;
                        document.getElementById('rejectReturnTo').value = document.getElementById('reopenRejectReturnTo').value || 'Details';
                        document.getElementById('rejectDisplayNo').textContent = document.getElementById('reopenRejectNo').value;
                        document.getElementById('rejectDisplayTitle').textContent = document.getElementById('reopenRejectTitle').value;
                        new bootstrap.Modal(rejectModalEl).show();
                    }
                })();
                    </text>
                }
            });
        </script>
    }
}
